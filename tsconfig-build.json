{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "declaration": true,
    "declarationDir": "bundles",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "bundles/",
    "paths": {
      "@tanbo/color-picker": [
        "src/public-api.ts"
      ],
      "@tanbo/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/"
  ]
}
